<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="2.7sp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="67sp"
            android:orientation="horizontal"
            android:background="@android:color/black">


            <ImageView
                android:id="@+id/list_customer_img"
                android:layout_width="60sp"
                android:layout_height="50sp"
                android:layout_gravity="center_vertical"
                android:background="@android:color/black"
                android:paddingLeft="20sp"
                android:paddingRight="0sp"/>

            <TextView
                android:id="@+id/list_customers"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10sp"
                android:paddingTop="10sp"
                android:paddingRight="?android:attr/expandableListPreferredItemPaddingLeft"
                android:paddingBottom="10sp"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/list_racks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingBottom="10sp"
                android:paddingLeft="10sp"
                android:paddingRight="?android:attr/expandableListPreferredItemPaddingLeft"
                android:paddingTop="10sp"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>